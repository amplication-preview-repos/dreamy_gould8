datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  content    String?
  createdAt  DateTime    @default(now())
  id         String      @id @default(cuid())
  spamChecks SpamCheck[]
  updatedAt  DateTime    @updatedAt
  user       User?       @relation(fields: [userId], references: [id])
  userId     String?
}

model SpamCheck {
  createdAt  DateTime             @default(now())
  id         String               @id @default(cuid())
  post       Post?                @relation(fields: [postId], references: [id])
  postId     String?
  reason     String?
  spamRating Int?
  status     EnumSpamCheckStatus?
  updatedAt  DateTime             @updatedAt
}

model Media {
  createdAt DateTime            @default(now())
  id        String              @id @default(cuid())
  typeField EnumMediaTypeField?
  updatedAt DateTime            @updatedAt
  url       String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  posts     Post[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumSpamCheckStatus {
  Option1
}

enum EnumMediaTypeField {
  Option1
}
